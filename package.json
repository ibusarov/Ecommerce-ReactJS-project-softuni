{
  "name": "ecommerce",
  "version": "1.0.0",
  "description": "Ecommerce for online shopping",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server",
    "server": "nodemon server/server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node server/seeder",
    "data:destroy": "node server/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/igotto/Ecommerce-ReactJS-project-softuni.git"
  },
  "author": "IB",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/igotto/Ecommerce-ReactJS-project-softuni/issues"
  },
  "homepage": "https://github.com/igotto/Ecommerce-ReactJS-project-softuni#readme",
  "dependencies": {
    "@heroku/buildpack-registry": "^1.0.1",
    "async-file": "^2.0.2",
    "bcryptjs": "^2.4.3",
    "cli-ux": "^6.0.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.2.0",
    "got": "^12.0.0",
    "heroku": "^7.59.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.0",
    "phoenix": "^1.6.5"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "nodemon": "^2.0.15"
  },
  "engines": {
    "node": "16.x"
  }
}
